/Node js: File Handling code/

const fs = require("fs");


fs.readFile("atharva.txt", "utf8" ,(err, data) => {
    console.log(data);
})

fs.writeFile("atharva.txt", "Pooja eats icecream", (err, data) => {
})

fs.readFile("atharva.txt", "utf8" ,(err, data) => {
    console.log(data);
})

fs.rename("atharva.txt", "atharva.txt" ,(err, data) => {
    console.log(data);
})
